<!-- Disable tap highlight on IE -->
<link rel="icon" type="image/x-icon" href="{{site.theme.link}}/favicon/favicon.ico" />
<!-- Disable tap highlight on IE -->
<meta name="msapplication-tap-highlight" content="no">
<!-- Web Application Manifest -->
<link rel="manifest" href="{{site.theme.link}}/favicon/manifest.json">
<!-- Add to homescreen for Chrome on Android -->
<meta name="mobile-web-app-capable" content="yes">
<meta name="application-name" content="{{site.name}}">
<link rel="icon" sizes="192x192" href="{{site.theme.link}}/favicon/android-chrome-192x192.png">
<!-- Add to homescreen for Safari on iOS -->
<meta name="apple-mobile-web-app-capable" content="yes">
<meta name="apple-mobile-web-app-status-bar-style" content="black">
<meta name="apple-mobile-web-app-title" content="{{site.name}}">
<link rel="apple-touch-icon" href="{{site.theme.link}}/favicon/apple-touch-icon.png">
<!-- Tile icon for Win8 (144x144 + tile color) -->
<meta name="msapplication-TileImage" content="{{site.theme.link}}/favicon/mstile-310x310.png">
<meta name="msapplication-TileColor" content="#313B44">
<!-- Color the status bar on mobile devices -->
<meta name="theme-color" content="#313B44">
