<!-- Apostille Country List -->
<div class="ApostilleCountries">
  <div class="ApostilleCountries-list">
    <div class="ApostilleCountries-listWrapper" id="js-countries">
      <div class="ApostilleCountries-search">
        <!--<i class="icon--search"></i>-->
        <input class="search" type="search" placeholder="Search" />
      </div>
      <ul class="ApostilleCountries-countries list">
        {% for country in apostilleCountries %}
        <li>
          <a class="ApostilleCountries-link" href="/submit/?foreign=Yes&country={{country.name}}">
            <div class="ApostilleCountries-sprite {{country.code}}"></div>
            <span class="name">{{country.name}}</span>
          </a>
        </li>
        {% endfor %}
      </ul>
    </div>
  </div>
  <div class="ApostilleCountries-map">
    <img class="ApostilleCountries-mapImage" src="{{site.theme.link}}/img/ApostilleMap.png">
  </div>
</div>
